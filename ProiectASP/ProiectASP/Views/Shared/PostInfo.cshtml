@model ProiectASP.Models.Post

<div class="card">


    <div class="card-body">

        <h3 class="card-title alert-success py-3 px-3 rounded-2">@Model.Content</h3>

    </div>

    @if (Model.Image != null)
    {
        <div>
            <img src="@Model.Image" alt="Post Image" style="width: 50px; height: 50px; object-fit: cover" />

        </div>




    }




</div>