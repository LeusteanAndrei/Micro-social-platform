@model ProiectASP.Models.Group


<h2 class="text-center mt-5">Create group</h2>

<br />

<div class="container mt-5">
    <div class="row">
        <div class="col-6 offset-3">

            <form enctype="multipart/form-data"  method="post" asp-action="New" asp-controller="Groups">

                <div asp-validation-summary="All" class="text-danger"></div>


                <div class="form-group">
                    <label asp-for="Name" class="form-label">Group name</label>
                    <br />
                    <input asp-for="Name" class="form-control" />


                    <span asp-validation-for="Name" class="text-danger"></span>

                    <br /><br />
                </div>

                <div class="form-group">
                    <label asp-for="Description" class="form-label">Group description</label>
                    <br />
                    <textarea asp-for="Description" class="form-control"></textarea>


                    <span asp-validation-for="Description" class="text-danger"></span>


                    <br /><br />
                </div>


                <div class="form-group">
                    <label asp-for="Image">Group Image</label>
                    <input asp-for="Image" class="form-control" type="file"/>
                </div>
              
                <br />
                <button class="btn btn-success" type="submit">Create group</button>

            </form>
        </div>
    </div>
</div>


