@model ProiectASP.Models.Post


<h2 class="text-center mt-5">Add a post to your group</h2>

<br />

<div class="container mt-5">
    <div class="row">
        <div class="col-6 offset-3">

            <form enctype="multipart/form-data" asp-controller="Groups" asp-action="AddPost">

                <div asp-validation-summary="All" class="text-danger"></div>


                <input type="hidden" name="GroupId" value="@ViewBag.GroupId" />

                <div class="form-group">

                    <!-- Label pentru Conținut -->
                    <label asp-for="Content" class="form-label">Content</label>
                    <br />
                    <!-- TextArea pentru Conținut -->
                    <textarea asp-for="Content" class="form-control"></textarea>
                    <!-- Mesaj de validare pentru Conținut -->
                    <span asp-validation-for="Content" class="text-danger"></span>
                    <br /> <br />
                </div>
                <div class="form-group">
                    <label asp-for="Image">Upload image</label>
                    <input asp-for="Image" class="form-control" type="file" />
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>

                <br />
                <button class="btn btn-success" type="submit">Save post</button>

            </form>
        </div>
    </div>
</div>