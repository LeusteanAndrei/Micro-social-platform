@model ProiectASP.Models.Group

<h2 class="text-center mt-5">Edit Group</h2>

<br />

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-3">

            <form enctype ="multipart/form-data"  method="post" asp-action="Edit" asp-controller="Groups" asp-route-id="@Model.Id">


                <div asp-validation-summary="All" class="text-danger"></div>
                
                <div class="form-group">
                    <label asp-for="Name" class="form-label">Group Name</label>
                    <br />
                    <input asp-for="Name" class="form-control" />

                    <span asp-validation-for="Name" class="text-danger"></span>


                    <br /><br />
                </div>

                <div class="form-group">
                    <label asp-for="Description" class="form-label">Group Description</label>
                    <br />
                    <textarea asp-for="Description" class="form-control"></textarea>

                    <span asp-validation-for="Description" class="text-danger"></span>


                    <br /><br />
                </div>

                <div class="form-group">
                    <label asp-for="Image">Group Image</label>
                    <br />
                    <input asp-for="Image" class="form-control" type="file" />

                    <br /><br />
                </div>




                <button class="btn btn-sm btn-success" type="submit">Edit Group</button>

            </form>
        </div>
    </div>
</div>

