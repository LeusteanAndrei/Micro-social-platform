<style>

    .hover:hover
    {
        background-color: #dbdad7;
    }
</style>


@if (ViewBag.Message != null)
{
    <div class="alert-success p-3 rounded-3 text-center mb-5 @ViewBag.Alert">
        @ViewBag.Message
    </div>
}

<br />
<br />

@if (ViewBag.Count == 0)
{
    <div>
        You have no conversations.
    </div>
}
else{

    <h2>Conversations</h2>
}



@foreach (var c in ViewBag.Conversations)
{
    <div class="card">


        <a class="card-body btn hover" asp-controller="Conversations" asp-action="Index" asp-route-id="@c.Id">

                @foreach(var u in c.Users)
                {
                    @if(u.Id != ViewBag.UserId){
                        <div class="d-flex flex-row gap-2">
                            <img src="@u.Profile.ProfileImage" alt="profile image" class="rounded-circle"
                                 style="width:50px; height:50px; " />
                            <div style="height: 50px; display: flex; align-items: center;"><b>@u.UserName</b></div>
                        </div>
                    }
                }



        </a>
    </div>

    <br />
    <br />
}


